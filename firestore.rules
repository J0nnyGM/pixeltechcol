rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // --- REGLAS DE NEGOCIO ---

    // 1. Usuarios (Perfil y Subcolecciones)
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // 2. Productos (Catálogo)
    match /products/{productId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      
      allow update: if isAdmin() || (
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock', 'combinations', 'updatedAt'])
      );

      match /history/{historyId} {
        allow read, write: if isAdmin();
      }
    }

    // 3. Categorías
    match /categories/{catId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Marcas
    match /brands/{brandId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. Pedidos (Orders)
    match /orders/{orderId} {
      allow create: if true; 
      
      allow read: if isAdmin() || 
                  (request.auth != null && resource.data.userId == request.auth.uid) || 
                  resource.data.userId == 'GUEST_MP';
      
      allow update, delete: if isAdmin();
    }

    // 6. Remisiones
    match /remissions/{remissionId} {
      allow create: if true; 
      allow read, update, delete: if isAdmin();
    }

    // 7. Garantías
    match /warranties/{warrantyId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // 8. Inventario RMA
    match /warranty_inventory/{itemId} {
      allow read, write: if isAdmin();
    }

    // 9. Proveedores
    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }

    // 10. Compras (Entradas)
    match /purchases/{purchaseId} {
      allow read, write: if isAdmin();
    }

    // 11. Carrito (Legacy)
    match /carts/{cartItemId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // 12. Configuración (Shipping, Banners)
    match /config/{configDoc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 13. GASTOS
    match /expenses/{expenseId} {
      allow read, write: if isAdmin();
    }

    // 14. CUENTAS (TESORERÍA)
    match /accounts/{accountId} {
      allow read, write: if isAdmin();
    }

    // 15. CUENTAS POR PAGAR (CARTERA)
    match /payables/{payableId} {
      allow read, write: if isAdmin();
    }

    // --- NUEVO ---
    // 16. CHATS (WhatsApp CRM)
    // Solo el admin puede ver y responder chats desde el panel
    match /chats/{chatId} {
      allow read, write: if isAdmin();

      match /messages/{messageId} {
        allow read, write: if isAdmin();
      }
    }
  }
}
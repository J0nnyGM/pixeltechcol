rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    function isAdmin() {
      // Optimizamos verificando existencia antes de leer
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // --- REGLAS DE NEGOCIO ---

    // 1. Usuarios (CORRECCIÓN CRÍTICA AQUÍ)
    match /users/{userId} {
      // Separamos las reglas para evitar ciclo infinito en isAdmin()
      // 1. El dueño siempre puede leer/escribir SU documento (sin llamar a isAdmin)
      allow read, write: if isOwner(userId);
      // 2. El admin puede leer/escribir el de otros
      allow read, write: if isAdmin();
      
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // 2. Productos (Catálogo)
    match /products/{productId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      
      // Separamos para mayor claridad y evitar fallos lógicos
      // Opción A: Es Admin (Permiso total)
      allow update: if isAdmin();
      // Opción B: Es sistema/cliente (Solo stock y variantes, nunca precio)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock', 'combinations', 'updatedAt']);

      match /history/{historyId} {
        allow read, write: if isAdmin();
      }
    }

    // ... (El resto de tus reglas para categories, brands, orders, etc. déjalas igual) ...
    
    // 3. Categorías
    match /categories/{catId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Marcas
    match /brands/{brandId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. Pedidos (Orders)
    match /orders/{orderId} {
      allow create: if true; 
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid) || resource.data.userId == 'GUEST_MP';
      allow update, delete: if isAdmin();
    }

    // 6. Remisiones
    match /remissions/{remissionId} {
      allow create: if true; 
      allow read, update, delete: if isAdmin();
    }

    // 7. Garantías
    match /warranties/{warrantyId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // 8. Inventario RMA
    match /warranty_inventory/{itemId} {
      allow read, write: if isAdmin();
    }

    // 9. Proveedores
    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }

    // 10. Compras (Entradas)
    match /purchases/{purchaseId} {
      allow read, write: if isAdmin();
    }

    // 11. Carrito (Legacy)
    match /carts/{cartItemId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // 12. Configuración
    match /config/{configDoc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 13. GASTOS
    match /expenses/{expenseId} {
      allow read, write: if isAdmin();
    }
    
    match /expenses_trash/{trashId} {
      allow read, write: if isAdmin();
    }

    // 14. CUENTAS
    match /accounts/{accountId} {
      allow read, write: if isAdmin();
    }

    // 15. CARTERA
    match /payables/{payableId} {
      allow read, write: if isAdmin();
    }

    // 16. CHATS
    match /chats/{chatId} {
      allow read, write: if isAdmin();
      match /messages/{messageId} {
        allow read, write: if isAdmin();
      }
    }
  }
}
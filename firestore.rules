rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- REGLAS DE NEGOCIO ---

    // 1. Usuarios (Perfil)
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // 2. Productos (Catálogo)
    match /products/{productId} {
      allow read: if true; 
      allow write: if isAdmin();

      match /history/{historyId} {
        allow read, write: if isAdmin();
      }
    }

    // 3. Categorías
    match /categories/{catId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Pedidos (Orders)
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // 5. Remisiones
    match /remissions/{remissionId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // 6. Garantías
    match /warranties/{warrantyId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // 7. Inventario RMA
    match /warranty_inventory/{itemId} {
      allow read, write: if isAdmin();
    }

    // 8. Proveedores
    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }

    // 9. Compras
    match /purchases/{purchaseId} {
      allow read, write: if isAdmin();
    }

    // 10. Carrito de Compras (Si decidieras volver a usar Firebase para el carrito)
    match /carts/{cartItemId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 11. CONFIGURACIÓN DEL SISTEMA (AQUÍ ESTABA EL ERROR)
    // Esta colección guarda la configuración de envíos ('config/shipping')
    match /config/{configDoc} {
      // Admin: Puede leer y editar (para guardar precios de envío)
      // Usuario Autenticado: Puede leer (para calcular cuánto le cuesta el envío en el checkout)
      allow read: if request.auth != null; 
      allow write: if isAdmin();
    }
  }
}
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- REGLAS DE NEGOCIO ---

    // 1. Usuarios (Perfil)
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // 2. Productos (Catálogo) - ¡CORREGIDO!
    match /products/{productId} {
      allow read: if true;
      
      // Solo el admin puede CREAR o BORRAR productos
      allow create, delete: if isAdmin();
      
      // ACTUALIZAR: Admin puede todo. 
      // El Cliente puede actualizar SOLO si cambia únicamente el 'stock' y el valor es válido.
      allow update: if isAdmin() || (
        request.auth != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock']) && // Solo toca el stock
        request.resource.data.stock >= 0 && // No puede dejar stock negativo
        request.resource.data.stock < resource.data.stock // Solo puede restar (comprar), no sumar
      );

      match /history/{historyId} {
        allow read, write: if isAdmin();
      }
    }

    // 3. Categorías
    match /categories/{catId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Pedidos (Orders)
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // 5. Remisiones
    match /remissions/{remissionId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // 6. Garantías
    match /warranties/{warrantyId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // 7. Inventario RMA
    match /warranty_inventory/{itemId} {
      allow read, write: if isAdmin();
    }

    // 8. Proveedores
    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }

    // 9. Compras
    match /purchases/{purchaseId} {
      allow read, write: if isAdmin();
    }

    // 10. Carrito (Legacy)
    match /carts/{cartItemId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 11. Configuración
    match /config/{configDoc} {
      allow read: if request.auth != null; 
      allow write: if isAdmin();
    }
  }
}
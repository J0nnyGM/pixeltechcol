rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Cualquiera puede VER las imagenes
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Solo el ADMIN puede SUBIR imagenes
    // (Usamos una validaci√≥n simple de auth por ahora para no complicarnos)
    match /products/{imageId} {
      allow write: if request.auth != null;
    }
  }
}
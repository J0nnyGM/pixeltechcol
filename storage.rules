rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- LECTURA PÚBLICA ---
    // Permite que cualquier usuario vea las imágenes de la tienda
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // --- ESCRITURA PARA ADMINISTRADORES ---
    // El uso de {allPaths=**} permite crear carpetas y subcarpetas 
    // como 'global' y 'variants' dentro de 'products'
    match /products/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Opcional: Si tienes fotos de perfil de usuarios
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. GARANTÍAS
    match /warranties/{orderId}/{fileName} {
      allow read, write: if request.auth != null;
    }

    // 2. INFORMES TÉCNICOS
    match /warranty_reports/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // 3. PRODUCTOS
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 4. BANNERS Y VITRINA
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 5. ✅ NUEVO: CATEGORÍAS (Solución a tu error)
    // Usamos {allPaths=**} para permitir subcarpetas como /categories/subs/
    match /categories/{allPaths=**} {
      allow read: if true;  // Público (para que los clientes vean las fotos)
      allow write: if request.auth != null; // Solo admin sube fotos
    }

    // 6. FACTURAS
    match /invoices/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Simplificado a auth != null si no tienes la función isAdmin definida aquí
    }

    // 7. MARCAS (Para admin/brands.html)
    match /brands/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. GARANTÍAS
    match /warranties/{orderId}/{fileName} {
      allow read, write: if request.auth != null;
    }

    // 2. INFORMES TÉCNICOS
    match /warranty_reports/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // 3. PRODUCTOS
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 4. BANNERS Y VITRINA
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 5. CATEGORÍAS
    match /categories/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 6. FACTURAS
    match /invoices/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // 7. MARCAS
    match /brands/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 8. ✅ NUEVO: CHATS (WhatsApp)
    // Permitimos subir fotos desde el panel de admin y verlas
    match /chats/{allPaths=**} {
      allow read: if true; // Público para que WhatsApp pueda descargar la imagen si le mandamos el link
      allow write: if request.auth != null; // Solo usuarios logueados (Admin) pueden subir
    }
  }
}